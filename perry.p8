version 18
__lua__
-- perry the pedal the game

local perry
local frame

function _init()
  perry = {
    x=64,
    y=64
  }
  frame = 0
end

function _update()
  frame += 1
end

function _draw()
  cls()
  spr(mod(frame / 8, 2), perry.x, perry.y)
end


function mod(x, base)
  return x - flr(x / base) * base
end

